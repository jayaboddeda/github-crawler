<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Github Crawler</title>
    <link rel="icon" href="../assets/images/GitHub_desktop_logo.png">
    <link rel="stylesheet" href="../assets/css/reset.css">
    <link rel="stylesheet" href="../assets/css/theme.css">
    <link rel="stylesheet" href="../assets/css/login.css">
    <link rel="stylesheet" href="../assets/css/index.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

</head>
<%if (user.theme=="true" ) {%>

    <body class="darktheme">

        <% }else{%>

            <body>
                <% } %>

                    <%-include("partials/header.ejs") %>
                    <%-include("partials/alerts.ejs") %>

                        <main>
                            <div class="searchbar main-search">

                                <form action="/search" method="post">
                                    <input type="text" name="username" placeholder="Search by Username or name">
                                </form>
                            </div>

                            <div class="apidatacontainer">
                                <ul class="apidataul">

                                    <% for(let i=0; i < trendingrepos.length; i++){%>
                                        <li class="apidata">
                                            <ul>
                                                <li><span>Title :</span>  <%=trendingrepos[i].repotitle%>
                                                </li>
                                                <li><span> About :</span><%=trendingrepos[i].aboutrepo%>
                                                </li>
                                                <li><span>Stars :</span> <%=trendingrepos[i].repostars%>
                                                </li>
                                                <li><span>Forks :</span> <%=trendingrepos[i].repoforks%>
                                                </li>
                                                <li><span> Language :</span> <%=trendingrepos[i].repolanguage%>
                                                </li>
                                            </ul>
                                        </li>
                                        <%}%>
                                </ul>
                            </div>
                            
                        </main>
                       <script src="../assets/scripts/theme.js"></script>
            </body>

</html>